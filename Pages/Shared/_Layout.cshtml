<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Workshop_App_Demo_Goof_dotNET</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Workshop_App_Demo_Goof_dotNET.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Workshop_App_Demo_Goof_dotNET</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Vulnerabilities
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/Sqli">SQL Injection</a></li>
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/Xss">XSS</a></li>
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/CmdInjection">Command Injection</a></li>
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/PathTraversal">Path Traversal</a></li>
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/InsecureDeserialization">Insecure Deserialization</a></li>
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/Ssrf">SSRF</a></li>
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/UnvalidatedRedirect">Unvalidated Redirect</a></li>
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/InsecureCrypto">Insecure Crypto</a></li>
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/HardcodedSecrets">Hardcoded Secrets</a></li>
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/LogForging">Log Forging</a></li>
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/XPathInjection">XPath Injection</a></li>
                                <li><a class="dropdown-item" asp-page="/Vulnerabilities/LdapInjection">LDAP Injection</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Workshop_App_Demo_Goof_dotNET - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
